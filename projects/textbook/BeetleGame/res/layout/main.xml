<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">
    
    <TextView android:id="@+id/turn"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:text="@string/playerone"
    	android:textSize="24dp" />
	
	<com.googlecode.android4cs2.beetlegame.BeetleView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/bug_one"
		android:layout_height="200sp"
		android:layout_width="200sp"
		android:layout_below="@id/turn"
		android:layout_alignParentLeft="true"
		android:padding="40sp"
		android:scaleType="fitEnd" />
		
	<com.googlecode.android4cs2.beetlegame.DieView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/die"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerHorizontal="true" 
		android:layout_centerInParent="true" />
		
	<com.googlecode.android4cs2.beetlegame.BeetleView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/bug_two"
		android:layout_height="200sp"
		android:layout_width="200sp"
		android:layout_below="@id/turn"
		android:layout_alignParentRight="true"
		android:padding="40sp"
		android:scaleType="fitEnd" />

</RelativeLayout>
